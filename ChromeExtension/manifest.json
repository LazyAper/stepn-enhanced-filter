{
  "name": "Enhanced Filter for STEPN",
  "description": "Better sneakers management for STEPN Marketplace (by inapolsky)",
  "version": "3.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Enhanced Filter for STEPN",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "permissions": [
    "activeTab"
  ],
  "optional_permissions": [
    "https://*.stepn.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.stepn.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "contentScript.css"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/activate.png",
        "assets/delete.png",
        "contentPrivileged.js"
      ],
      "matches": [
        "https://*.stepn.com/*"
      ]
    }
  ]
}